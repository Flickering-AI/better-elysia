{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "formatter": {
        "lineWidth": 128,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "globals": ["Bun"],
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        },
        "formatter": {
            "semicolons": "asNeeded",
            "trailingCommas": "none"
        }
    },
    "linter": {
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "style": {
                "useImportType": "off",
                "noParameterAssign": "off"
            }
        }
    }
}
